<%= render partial:"shared/form_header"%>

<%= form_with model: @user, url: user_registration_path, class: "user-registration-main",local: true do |f| %>
  <div class="user-form-header">
      <h1 class="user-form-header-text">会員登録</h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="user-form-group">
    <div class="user-form-text-wrap">
      <label class="user-form-text">ニックネーム</label>
      <span class="user-indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"user-input-default", id:"nickname", placeholder:"例) tarou", maxlength:"40", autofocus: true %>
  </div>

  <div class="user-form-group">
    <div class="user-form-text-wrap">
      <label class="user-form-text">メールアドレス</label>
      <span class="user-indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"user-input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="user-form-group">
    <div class="user-form-text-wrap">
      <label class="user-form-text">パスワード</label>
      <span class="user-indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"user-input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="user-form-group">
    <div class='user-form-text-wrap'>
      <label class="user-form-text">パスワード(確認)</label>
      <span class="user-indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"user-input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="user-submit-btn">
    <%= f.submit "会員登録" , class:"user-submit-btn-text" %>
  </div>
<% end %>



