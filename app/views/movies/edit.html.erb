<%= render partial:"shared/form_header"%>

<div class="movie-form-header">
  <h1 class="movie-form-header-text">内容の編集</h1>

  <%= form_with model: @movie, class: "movie-registration-main", local: true do |f| %>

    <%= render partial:"shared/movie_form", locals: {f: f} %>

    <div class="movie-submit-btn">
      <%= f.submit "変更する" , class:"movie-submit-btn-text" %>
    </div>

  <% end %>
</div>